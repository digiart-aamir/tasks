  <script>
    // JavaScript code to handle lesson selection and content display
    const lessonItems = document.querySelectorAll('.navbar li');
    const contentSections = document.querySelectorAll('.content > div');

    // Event listener for lesson selection
    lessonItems.forEach((item, index) => {
      item.addEventListener('click', () => {
        // Remove active class from all lesson items
        lessonItems.forEach((item) => {
          item.classList.remove('active');
        });

        // Add active class to the selected lesson item
        item.classList.add('active');

        // Hide all content sections
        contentSections.forEach((section) => {
          section.style.display = 'none';
        });

        // Display the corresponding content section
        contentSections[index].style.display = 'block';
      });
    });
  </script>
